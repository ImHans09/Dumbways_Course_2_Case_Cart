generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Define User model for users table in database
model User {
  @@map(name: "users")

  id          Int       @id @default(autoincrement())
  name        String    @db.VarChar(300)
  email       String    @unique @db.VarChar(300)
  password    String    
  role        UserRole  @default(CUSTOMER)
  createdAt   DateTime  @map(name: "created_at") @default(now()) @db.Timestamp(4)
  updatedAt   DateTime  @map(name: "updated_at") @default(now()) @db.Timestamp(4)
  products    Product[]
}

// Define Product model for products table in database
model Product {
  @@map(name: "products")

  id          Int       @id @default(autoincrement())
  supplierId  Int       @map(name: "supplier_id")
  name        String    @db.VarChar(300)
  price       Float     @default(0)
  stock       Int       @default(0)
  createdAt   DateTime  @map(name: "created_at") @default(now()) @db.Timestamp(4)
  updatedAt   DateTime  @map(name: "updated_at") @default(now()) @db.Timestamp(4)
  supplier    User      @relation(fields: [supplierId], references: [id])
}

// Define user role enum for User model
enum UserRole {
  @@map(name: "userrole")

  ADMIN     @map(name: "admin")
  CUSTOMER  @map(name: "customer")
  SUPPLIER  @map(name: "supplier")
}