generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Define User model for users table in database
model User {
  @@map(name: "users")

  id          Int       @id @default(autoincrement())
  name        String    @db.VarChar(300)
  email       String    @unique @db.VarChar(300)
  password    String    @db.VarChar(16)
  point       Int       @default(0)
  createdAt   DateTime  @map(name: "created_at") @default(now()) @db.Timestamp(4)
  updatedAt   DateTime  @map(name: "updated_at") @default(now()) @db.Timestamp(4)
  orders      Order[]
}

// Define Product model for products table in database
model Product {
  @@map(name: "products")

  id          Int       @id @default(autoincrement())
  supplierId  Int       @map(name: "supplier_id")
  name        String    @db.VarChar(300)
  price       Float     @default(0)
  createdAt   DateTime  @map(name: "created_at") @default(now()) @db.Timestamp(4)
  updatedAt   DateTime  @map(name: "updated_at") @default(now()) @db.Timestamp(4)
  stock       Stock?
  orders      Order[]   @relation("products_in_orders")
  supplier    Supplier  @relation(fields: [supplierId], references: [id])
}

// Define Order model for orders table in database
model Order {
  @@map(name: "orders")

  id          Int       @id @default(autoincrement())
  userId      Int       @map(name: "user_id")
  quantity    Int       @default(0)
  subtotal    Float     @default(0)
  createdAt   DateTime  @map(name: "created_at") @default(now()) @db.Timestamp(4)
  updatedAt   DateTime  @map(name: "updated_at") @default(now()) @db.Timestamp(4)
  products    Product[] @relation("products_in_orders")
  user        User      @relation(fields: [userId], references: [id])
}

// Define Supplier model for suppliers table in database
model Supplier {
  @@map(name: "suppliers")

  id          Int       @id @default(autoincrement())
  name        String    @db.VarChar(300)
  stock       Int       @default(0)
  products    Product[]
}

// Define Stock model for stocks table in database
model Stock {
  @@map(name: "stocks")

  id          Int       @id @default(autoincrement())
  productId   Int       @map(name: "product_id") @unique
  quantity    Int       @default(0)
  product     Product   @relation(fields: [productId], references: [id])
}